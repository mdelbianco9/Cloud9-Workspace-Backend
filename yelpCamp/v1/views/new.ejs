<% include partials/header %>

<div class="container">
    <div class="row text-center">
        <h1>Create a New Campground</h1>
        <div style='width:30%; margin: 30px auto;'>
            <form action="/campgrounds" method="POST">
                <!-- The name attrubute links the data from the input to our route -->
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Image_URL" name="image">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-default">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>

</div>

